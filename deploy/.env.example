# ===========================================
# WhatsApp Receiver - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# cp .env.example .env
# ===========================================

# Docker Image Configuration
# --------------------------
# Docker Hub image name (username/repository)
DOCKER_IMAGE=your-dockerhub-username/whatsapp-receiver

# Image tag to deploy (latest, or specific version like v1.0.0 or sha-abc1234)
IMAGE_TAG=latest

# Application Port
# ----------------
# Port where the application will be accessible
APP_PORT=3000

# Email Configuration
# -------------------
# Provider: mailpit (for testing) or mailersend (for production)
EMAIL_PROVIDER=mailersend

# MailerSend API Key (get from https://www.mailersend.com/)
MAILERSEND_API_KEY=mlsn.your_api_key_here

# Sender email address (must be verified in MailerSend)
EMAIL_FROM=noreply@yourdomain.com

# Sender name displayed in emails
EMAIL_FROM_NAME=WhatsApp Receiver

# Recipient for daily reports
EMAIL_REPORT_TO=your-email@example.com

# Daily Email Report Configuration
# --------------------------------
# Enable/disable daily email reports (true/false)
DAILY_REPORT_ENABLED=true

# Time to send daily report (cron format: minute hour)
# Default: 8:00 AM
DAILY_REPORT_HOUR=8
DAILY_REPORT_MINUTE=0

# Phone numbers to include in daily report (comma-separated)
# Only messages from these numbers will be included
# Leave empty to include all messages
# Example: 573001234567,573009876543,1234567890
EMAIL_FILTER_NUMBERS=573001234567,573009876543

# Timezone for cron jobs (default: America/Bogota)
TZ=America/Bogota
