# ===========================================
# WhatsApp Receiver - Production Environment
# ===========================================

# Server
PORT=3000
NODE_ENV=production

# Paths (relative to app directory)
SESSION_PATH=./wa_session
DATA_PATH=./data

# ===========================================
# Email Configuration (MailerSend)
# ===========================================
EMAIL_PROVIDER=mailersend
MAILERSEND_API_KEY=mlsn.your_api_key_here

# EMAIL_FROM must use a domain verified in MailerSend
# For test accounts, use: noreply@test-xxxxx.mlsender.net
EMAIL_FROM=noreply@your-domain.mlsender.net
EMAIL_FROM_NAME=WhatsApp Receiver
EMAIL_REPORT_TO=your-email@example.com

# ===========================================
# Daily Report Scheduler
# ===========================================
DAILY_REPORT_ENABLED=true
DAILY_REPORT_HOUR=8
DAILY_REPORT_MINUTE=0

# Filter: only include messages from these phone numbers (comma-separated)
# Leave empty to include all messages
EMAIL_FILTER_NUMBERS=573001234567,573009876543

# Timezone
TZ=America/Bogota
