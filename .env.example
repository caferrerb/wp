# Server Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Session
WA_SESSION_PATH=./wa_session

# Database
DATABASE_PATH=./data/messages.db

# Email Configuration
# Provider: 'mailersend' (production) or 'mailpit' (testing/development)
EMAIL_PROVIDER=mailpit
EMAIL_FROM=reports@yourdomain.com
EMAIL_FROM_NAME=WhatsApp Reports
EMAIL_REPORT_TO=recipient@email.com

# MailerSend Configuration (production)
MAILERSEND_API_KEY=your_mailersend_api_key_here

# Mailpit Configuration (testing/development)
# Mailpit UI: http://localhost:8025
MAILPIT_URL=http://mailpit:8025

# Daily Report Scheduler
ENABLE_DAILY_REPORT=true
DAILY_REPORT_HOUR=23
DAILY_REPORT_MINUTE=59
